<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.droidloft.gasup.MainActivity">


    <Button
        android:id="@+id/gasUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gas Up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="163dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Today's Date: "  />

    <TextView
        android:id="@+id/lastGasTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/dateTextView"
        android:layout_centerHorizontal="true"
        android:text="Last Gas Up: " />

    <TextView
        android:id="@+id/daysSinceTextView"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="Days Since Last Gas Up"
        android:layout_above="@+id/gasUpButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp" />

    <TextView
        android:id="@+id/daysTextView"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="100sp"
        android:text="5"
        android:layout_above="@+id/daysSinceTextView"
        android:layout_alignLeft="@+id/daysSinceTextView"
        android:layout_alignStart="@+id/daysSinceTextView" />
</RelativeLayout>
